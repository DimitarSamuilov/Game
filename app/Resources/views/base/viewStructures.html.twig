{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="well">
            <h2>All Users</h2>
            <div class="row">
                <table class="table table-striped table-hover ">
                    <thead>
                    <tr>

                        <th>Structure Name</th>
                        <th>Current Level</th>
                        <th>Upgrade Cost: Wood</th>
                        <th>Upgrade Cost: Coin</th>
                        <th>Upgrade</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for structure in structures %}
                        <tr>
                            <th>{{ structure.name }}</th>
                            <th>{{ structure.level }}</th>
                            <th>{{ structure.wood }}</th>
                            <th>{{ structure.coin }}</th>
                            {% if structure.upgradeTime %}
                                <td>{{ structure.upgradeTime }}
                                </td>
                            {% else %}
                                <td>
                                    <a href="{{ path("base_structure_upgrade",{structureId:structure.id}) }}">Upgrade</a>
                                </td>
                            {% endif %}

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
