{% extends 'base.html.twig' %}

{% block main %}
    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-danger">
            {% for error in app.session.flashBag.get('error') %}
                {{ error }}
            {% endfor %}
        </div>
    {% endif %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form name="user" class="form-horizontal"  method="POST">
                <fieldset>
                    <legend>Unit Count</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_username">Recipient</label>
                        <div class="col-sm-4 ">
                            {{ form_widget(form.recipient) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_username">Content:</label>
                        <div class="col-sm-4 ">
                            {{ form_widget(form.content) }}
                        </div>
                    </div>
                    <div>
                        {{ form_widget(form._token) }}
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

